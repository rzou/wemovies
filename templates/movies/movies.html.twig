{% if bestMovie.video_url is not empty %}
<div id="contentMedia">
    <iframe width="420" height="315" src="{{ bestMovie.video_url }}"></iframe>
    <h3>{{ bestMovie.title }}</h3>
    <p>{{ bestMovie.overview }}</p>
</div>
{% endif %}
{% for movie in movies %}
    <div class="card" style="width: 25rem;">
        <img src="{{ movie.poster_path }}" class="card-img-top" alt="{{ movie.title }}">
        <div class="card-body">
            <h5 class="card-title">{{ movie.title }}</h5>
            <p class="card-text">{{ movie.overview }}</p>

            <button id="readmore">Lire les d√©tails</button>
        </div>
    </div>

{% endfor %}